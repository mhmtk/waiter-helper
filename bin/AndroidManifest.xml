<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.waiterhelper"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.mhmt.waiterhelper.activities.WaitMain"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.mhmt.waiterhelper.activities.EnterPatronsActivity"
            android:label="@string/title_activity_enter_patrons"
            android:parentActivityName="com.mhmt.waiterhelper.activities.WaitMain" >
        </activity>
        <activity
            android:name="com.mhmt.waiterhelper.activities.ViewActivity"
            android:label="@string/title_activity_view" >
        </activity>
    </application>

</manifest>
